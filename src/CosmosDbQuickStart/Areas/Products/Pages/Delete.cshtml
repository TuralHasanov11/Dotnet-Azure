@page "{id}"
@model ProductsDeleteModel
@{
    ViewData["Title"] = "Delete Product";
}
<h1>Delete Product</h1>
<h3>Are you sure you want to delete this product?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Product.name</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Product.quantity</dd>
        <dt class="col-sm-2">Sale</dt>
        <dd class="col-sm-10">@(Model.Product.sale ? "Yes" : "No")</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Product.category</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Product.id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="Products" asp-page="/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
