@page "{id}"
@model ProductsDetailsModel
@{
    ViewData["Title"] = "Product Details";
}
<h1>Product Details</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Product.name</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Product.quantity</dd>
        <dt class="col-sm-2">Sale</dt>
        <dd class="col-sm-10">@(Model.Product.sale ? "Yes" : "No")</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Product.category</dd>
    </dl>
    <a asp-area="Products" asp-page="/Edit" asp-route-id="@Model.Product.id" class="btn btn-warning">Edit</a>
    <a asp-area="Products" asp-page="/Delete" asp-route-id="@Model.Product.id" class="btn btn-danger">Delete</a>
    <a asp-area="Products" asp-page="/Index" class="btn btn-secondary">Back to List</a>
</div>
